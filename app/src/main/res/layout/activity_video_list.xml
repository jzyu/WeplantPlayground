<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divide_line"
    tools:context=".VideoListActivity">

    <com.wohuizhong.client.app.widget.TitleBarView
        android:id="@+id/titlebar"
        style="@style/TitleBar.Back"
        custom:title_text="Video list"/>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/ptrFrame"
        style="@style/PtrFrame">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cn.finalteam.loadingviewfinal.RecyclerViewFinal
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/tv_bubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#69B54E"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:translationY="-100dp" />
        </FrameLayout>

    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>